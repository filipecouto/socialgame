@model SocialGame.Models.LocalPasswordModel

<h3>Change password</h3>

<div id="changePassword-message-status"></div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "changePasswordForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Change Password Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="button" value="Change password" id="changePasswordButton" />
    </fieldset>
}
