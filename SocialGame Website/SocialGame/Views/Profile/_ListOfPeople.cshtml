
<div>
    <table align="center">
        <tr>
            <td colspan="4" align="center"><b><font size="5">@ViewBag.TableTitle</font></b></td>
        </tr>
@if (@ViewBag.Users != null && @ViewBag.Users.Count > 0)
{
        <tr>
            <td align="center"><b><font size="2">Picture</font></b></td>
            <td align="center"><b><font size="2">Name</font></b></td>
            <td align="center"><b><font size="2">Score</font></b></td>
            <td align="center"><b><font size="2">Mood</font></b></td>
        </tr>
            foreach (var item in @ViewBag.Users)
            {
                <tr>
                    <td><img src="@item.picture" alt="Picture" height="40"></td>
                    <td align="center">@Html.ActionLink((string)item.username, "PersonProfile", "Profile", new { id = item.id }, null)</td>
                    <td align="center">@item.totalScore</td>
                    <td align="center">@item.mood</td>
                </tr>
            }
}
else
{
        <tr>
            <td>No @ViewBag.TableTitle Found</td>
        </tr>
}
    </table>
</div>
