<h3>Change tags</h3>

<div id="changeTags-message-status"></div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "changeTagsForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Change Tags Form</legend>
        <ol>
            <li>
                <label for="Tags">Tags (tag1;tag2..)</label>
                <input id="Tags" type="text" name="Tags" value="@ViewBag.Tags" class="valid">
            </li>
        </ol>
        <input type="button" value="Change tags" id="changeTagsButton" />
    </fieldset>
}


