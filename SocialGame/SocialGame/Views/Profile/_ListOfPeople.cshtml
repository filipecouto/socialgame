
<div>
    <table align="center">
        <tr>
            <td colspan="3" align="center"><h1>@ViewBag.TableTitle</h1></td>
        </tr>
@if (@ViewBag.Users != null && @ViewBag.Users.Count > 0)
{
        <tr>
            <th>Name</th>
            <th>Score</th>
            <th>Mood</th>
        </tr>
            foreach (var item in @ViewBag.Users)
            {
                <tr>
                    <td>@Html.ActionLink((string)item.username, "PersonProfile", "Profile", new { id = item.id }, null)</td>
                    <td>@item.totalScore</td>
                    <td>@item.mood</td>
                </tr>
            }
}
else
{
        <tr>
            <td>No @ViewBag.TableTitle Found</td>
        </tr>
}
    </table>
</div>
